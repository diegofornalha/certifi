        "@types/helmet": "0.0.48",
        "@types/jsonwebtoken": "^9.0.1",
        "@types/jwk-to-pem": "^2.0.1",
        "@types/mocha": "^10.0.1",
        "@types/node": "^18.13.0",
        "@types/nodemailer": "^6.4.7",
        "@types/swagger-jsdoc": "^6.0.1",
        "@typescript-eslint/eslint-plugin": "^5.52.0",
        "@typescript-eslint/parser": "^5.52.0",
        "chai": "^4.3.7",
        "eslint": "^8.34.0",
        "mocha": "^10.2.0",

        "url": "https://gitlab.com/certifily/backend/issues"
    },
    "homepage": "https://gitlab.com/certifily/backend#readme",
    "dependencies": {
        "bcrypt": "^5.1.0",
        "body-parser": "^1.20.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "helmet": "^6.0.1",
        "jsonwebtoken": "^9.0.0",
        "jwk-to-pem": "^2.0.5",
        "mysql2": "^3.1.2",
        "nodemailer": "^6.9.1",

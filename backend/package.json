{
    "name": "certify.ly-backend",
    "version": "1.0.0",
    "description": "Backend repo for certify.ly",
    "main": "build/index.js",
    "scripts": {
        "predev": "npm run copy:api-docs",
        "dev": "nodemon",
        "prewatch": "npm run prebuild",
        "watch": "tsc --watch",
        "start": "node ./build/index.js",
        "prebuild": "rm -rf ./build",
        "build": "tsc --build",
        "postbuild": "npm run copy:api-docs",
        "copy:api-docs": "cp -r ./src/api-docs ./build/",
        "pretty": "prettier -w src"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@gitlab.com/certifily/backend.git"
    },
